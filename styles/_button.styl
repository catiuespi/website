.button
	align-items center
	border-radius 2px
	display flex
	font 1.4em 'Open Sans', sans-serif
	font-weight 600
	height 40px
	justify-content center
	letter-spacing 1.25px
	padding 0 8px
	position relative
	text-transform uppercase
	
	&.--pad-up
		padding 0 16px
	
	&.--wide
		min-width 200px
		width 25%
	
	&.--raised
		box-shadow 0 3px 1px -2px rgba(0,0,0,.2),
							 0 2px 2px 0 rgba(0,0,0,.14),
							 0 1px 5px 0 rgba(0,0,0,.12)

.icon-button
	align-items center
	border-radius 50%
	display flex
	height 48px
	justify-content center
	position relative
	width 48px

	> .icon
		height 32px
		width 32px
		
	&.--small
		height 40px
		width 40px

		> .icon
			height 24px
			width 24px
		
.link-button
	align-items center
	border-radius 2px
	display inline-flex
	font 1.4em 'Open Sans', sans-serif
	font-weight 600
	height 36px
	justify-content center
	margin 4px
	padding 0 8px
	position relative
	text-transform uppercase
							 
.social-button
	align-items center
	border-radius 8px
	box-shadow 0 2px 4px 0 rgba(0,0,0,.1)
	display flex
	justify-content center
	position relative
	height 50px
	width 50px
	margin 16px 16px 0 0
	
	>.icon
		height 30px
		width 30px
	
	@media screen and (min-width: 480px)
		margin 0 0 16px 16px