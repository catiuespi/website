$bg    = #fff
$color = #008CB5
$color-2 = #708391

@font-face
	font-family 'Prototype'
	src url('fonts/prototype.woff2') format('woff2')
	
// Basics ---------------------------------|

html 
	box-sizing border-box
	--scroll-behavior smooth
	scroll-behavior smooth


*, *:before, *:after 
	box-sizing inherit


body, h1, h2, h3, h4, h5, h6, p, ol, ul, input 
	margin 0
	padding 0
	font-weight normal
	
body
	background #eee
	font-size 62.5%

button 
	background inherit
	border none
	color inherit
	font inherit
	outline 0

img
	max-width 100%
	height auto

svg
	width 100%
	height 100%

.art
	height 125px
	width 125px

.icon
	min-width 24px
	min-height 24px
	height 24px
	width 24px

a
	text-decoration none

.app
	min-width 360px
	
	@media screen and (min-width: 720px)
		padding-left 80px
		
	&--unpadding
		padding-left 0
		
.underline
	background #fff
	height 6px
	width 80%
	border-radius (@height/2)

.field
	font 1.6em/1.5em 'Open Sans', sans-serif
	border solid 1px #9e9e9e
	border-radius 4px
	height 40px
	margin .5em 0
	outline 0
	padding 0 1em
	width 100%
	
	&:focus
		border-color #000
		
.textarea-field
	border-radius 4px
	font 1.6em/1.5em 'Open Sans', sans-serif
	height 128px
	resize none
	border solid 1px #9e9e9e
	border-radius 4px
	margin .5em 0
	outline 0
	padding 1em
	width 100%
	
	&:focus
		border-color #000

.honey-pot
	display none

// Colors

.color-primary
	background $color
	color #fff
	fill currentcolor
	
.color-secondary
	background #fff
	color $color
	fill currentcolor
	
.color-tertiary
	background transparent
	color $color-2
	fill currentcolor

// Components --------------------------------- |

@import "styles/_box"
@import "styles/_button"
@import "styles/_card"
@import "styles/_footer"
@import "styles/_nav"
@import "styles/_ripple-css"

